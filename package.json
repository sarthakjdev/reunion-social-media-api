{
  "name": "reunion-social-media-api",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/index.js",
  "repository": {},
  "scripts": {
    "build": "tsc",
    "start": " npm run build && node -r ./prod-paths.ts ./dist/index.js NODE_ENV=production",
    "dev:db": "docker-compose -f ./database/docker-compose.yaml down && docker-compose -f ./database/docker-compose.yaml up -d ",
    "dev": "ts-node-dev -r  tsconfig-paths/register --respawn --exit-child --max-old-space-size=4076 ./index.ts",
    "dev:db-server": "npm run dev:db && npm run dev",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "db-migrate": "npx prisma generate && npx prisma migrate dev --name init",
    "db-generate": "npx prisma generate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "listr": "^0.14.3",
    "tsconfig-paths": "^4.0.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-plugin-import": "^2.25.3",
    "prisma": "^4.4.0",
    "ts-node": "^10.6.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.0"
  }
}
